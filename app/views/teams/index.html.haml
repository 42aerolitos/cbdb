%h1 Listing teams
%table
  %tr
    %th Name
    %th
    %th
    %th
  - @teams.each do |team|
    %tr
      %td= image_tag '/images/logos/'+team.file_name+".jpg", :height => 25, :alt => team.name, :id => team.file_name
      %td= team.name
      %td= link_to 'Show', team
      %td= link_to 'Edit', edit_team_path(team)
      %td= link_to 'Destroy', team, :confirm => 'Are you sure?', :method => :delete
%br/
= link_to 'New Team', new_team_path
